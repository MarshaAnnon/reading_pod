    <%= f.text_field :current_book %>
    <%= f.label "Book Title" %>
    <%= f.text_field :title %><!-- need to associate the book -->
    <%= f.label "Book Author" %>
    <%= f.text_field :author %><!-- need to associate the book -->
    <%= f.label "Author Bio" %>
    <%= f.text_field :author_bio %><!-- need to associate the book -->
    <%= f.label "Book Summary" %>
    <%= f.text_field :book_summary %><!-- need to associate the book -->
    <%= f.submit "Create Pod" %>
<% end %>
